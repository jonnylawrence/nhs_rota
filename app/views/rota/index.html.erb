<p id="notice"><%= notice %></p>
<h1>Rota Overview</h1>
<%= week_calendar number_of_weeks: 2, events: @rota_cal do |date| %>

  <span style="color:blue"><%= date %></span>

  <% @rota_cal.each do |rotum| %>
    <div>
      <small>
      <% if rotum.Date == date %>
      <B><%= rotum.location.name %></B>
      <br>
      <% if rotum.First_on_call_day_trade? %>
      <span style="color:red">
          <b>*</b>
      <% end %>
      1stD-<%= rotum.First_on_call_day.name %>
    </span>

      <br>
      <% if rotum.First_on_call_nights_trade? %>
  <span style="color:red">
      <b>*</b>
      <% end %>
      1stN-<%= rotum.First_on_call_nights.name %>
      <% if rotum.First_on_call_nights_trade? %>
      <b>*</b>
      <% end %>
      <br>
    </span>

    <% if rotum.Second_on_call_trade? %>
      <span style="color:red">
    <b>*</b>
    <% end %>
      2nd-<%= rotum.Second_on_call.name  %>
    </span>
      <br>

      <% if rotum.Consultant_trade? %>
        <span style="color:red">
      <b>*</b>
      <% end %>
      C-<%= rotum.Consultant.name  %>
</span>

      <% end %>
     </small>
    </div>
  <% end %>
<% end %>
<br>
