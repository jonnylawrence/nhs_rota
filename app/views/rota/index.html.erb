<p id="notice"><%= notice %></p>

<h1>Rota</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>1st on call day</th>
      <th>1st on call nights</th>
      <th>2nd on call</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rota.each do |rotum| %>
      <tr>
        <td><%= rotum.Date %></td>
        <td><%= rotum.First_on_call_day %></td>
        <td><%= rotum.First_on_call_nights %></td>
        <td><%= rotum.Second_on_call %></td>
        <td><%= link_to 'Show', rotum %></td>
        <td><%= link_to 'Edit', edit_rotum_path(rotum) %></td>
        <td><%= link_to 'Destroy', rotum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

