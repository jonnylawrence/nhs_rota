      </tr>
    </table>
  </div>

    <% if current_doctor.admin == true %>
  <div class="field">
    <%= f.label :admin %>
    <%= f.select :admin, ['true','false'] %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
