<p id="notice"><%= notice %></p>

<h1>Doctors</h1>
<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Consultant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.email %></td>
        <td>
          <% if doctor.consultant? %>
          <%= link_to image_tag("consultant.png", alt: "consultant", size: "20") %>
          <% else %>
          <%= link_to image_tag("spr.png", alt: "spr", size: "20") %>
          <% end %>
          </td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<%= link_to 'New Doctor', new_doctor_path %>
