<p id="notice"><%= notice %></p>

<h1>Doctors</h1>
You are:<%= @current_doctor.name %><br>
Admin:<%= @current_doctor.admin %>
<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>

      <th>Consult</th>
      <th>Admin</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Preference</th>
        <th>Group</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td>
          <% if doctor.consultant? %>
          <%= link_to image_tag("consultant.png", alt: "consultant", size: "20") %>
          <% else %>
          <%= link_to image_tag("spr.png", alt: "spr", size: "20") %>
          <% end %>
          </td>
          <td><%= doctor.admin %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.mobile %></td>
        <td><%= doctor.contact_preference %></td>
        <td><%= doctor.notification_group %></td>

        <td><%= link_to 'Show', doctor %></td>

            <% if current_doctor.admin == true || current_doctor.name == doctor.name %>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<%= link_to 'New Doctor', new_doctor_path, :class => "btn btn-success" %>
<br>
<p>

Consultant:
  <%= link_to image_tag("consultant.png", alt: "consultant", size: "20") %>
SPR:
  <%= link_to image_tag("spr.png", alt: "spr", size: "20") %>
</p>
