<% provide(:title, @doctor.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="doctor_info">
      <h1>
        <%= gravatar_for @doctor %>
        <%= @doctor.name %>
      </h1>
    </section>
  </aside>
</div>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @doctor.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @doctor.email %>
</p>

<p>
  <strong>Consultant:</strong>
  <%= @doctor.consultant %>
</p>

<p>
  <strong>Mobile:</strong>
  <%= @doctor.mobile %>
</p>

<p>
  <strong>Contact Preference:</strong>
  <%= @doctor.contact_preference %>
</p>

<p>
  <strong>Notification Group:</strong>
  <%= @doctor.notification_group %>
</p>

<p>
  <strong>Admin:</strong>
  <%= @doctor.admin %>
</p>

<%= link_to 'Edit', edit_doctor_path(@doctor) %> |
<%= link_to 'Back', doctors_path %>
